<!DOCTYPE html>
<html>
  <head>
    <title>DicMemo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
  </head>

  <body>
    <div class="siimple-layout full-height">
      <header class="header siimple-navbar siimple-navbar--blue">
        <div class="siimple-layout--left">
          <%= link_to 'DIC memo', root_path, class: 'siimple-navbar-title' %>
        </div>
        <div id="js-menu" class="siimple-layout--right">
          <a class="menu-btn" @click="toggleMenu">
            <span class="menu-btn-bar menu-btn-bar--top"></span>
            <span class="menu-btn-bar menu-btn-bar--center"></span>
            <span class="menu-btn-bar menu-btn-bar--bottom"></span>
          </a>
          <drawr-menu v-show="isActive" :is-active="isActive" @close="toggleMenu"></drawr-menu>
        </div>
      </header>
      <div class="container full-height">
        <%= yield %>
      </div>
    </div>

    <%= javascript_pack_tag 'application' %>
    <%= yield :loading_vuejs %>
  </body>
</html>
