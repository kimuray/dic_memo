<div class="devise">
  <div class="devise-box">
    <h2>Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <div class="siimple-form-field">
        <%= f.label :password, class: 'siimple-form-field-label' %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password,
                             autocomplete: "off",
                             class: 'siimple-input devise-input',
                             placeholder: 'password' %>
      </div>

      <div class="siimple-form-field">
        <%= f.label :password_confirmation, class: 'siimple-form-field-label' %><br />
        <%= f.password_field :password_confirmation,
                             autocomplete: "off",
                             class: 'siimple-input devise-input',
                             placeholder: 'password' %>
      </div>

      <div class="devise-actions">
        <%= f.submit "Change my password", class: 'siimple-btn siimple-btn--blue' %>
      </div>
    <% end %>

    <%#= render "users/shared/links" %>
  </div>
</div>
