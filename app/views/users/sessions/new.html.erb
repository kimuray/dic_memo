<div class="devise">
  <div class="devise-box">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'siimple-form') do |f| %>
      <div class="siimple-form-field">
        <%= f.label :email, class: 'siimple-form-field-label' %><br />
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: 'siimple-input devise-input',
                          placeholder: 'taro@example.com' %>
      </div>

      <div class="siimple-form-field">
        <%= f.label :password, class: 'siimple-form-field-label' %><br />
        <%= f.password_field :password,
                             autocomplete: "off",
                             class: 'siimple-input devise-input',
                             placeholder: 'password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="siimple-form-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="devise-actions">
        <%= f.submit "Log in", class: 'siimple-btn siimple-btn--blue' %>
      </div>
    <% end %>

    <%#= render "users/shared/links" %>
  </div>
</div>
